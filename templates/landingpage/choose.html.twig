    <form id="insuranceForm">
        <h2>Choisissez le type de constat :</h2>
        <input type="radio" id="type1" name="type" required value="Assurance vie">
        <label for="type1">Assurance vie</label><br>
        <input type="radio" id="type2" name="type" value="Assurance véhicule">
        <label for="type2">Assurance véhicule</label><br>
        <p>Vous avez choisi le type d'assurance : <span id="resultat"></span></p>
        <button type="submit">Ajouter constat</button>
        
    </form>

  

    <script>
    // Function to update the selected value
    function updateResult() {
        var selectedValue = document.querySelector('input[name="type"]:checked');
        if (selectedValue) {
            document.getElementById('resultat').innerText = selectedValue.value;
        }
    }

    // Event listener to update result on radio button change
    document.querySelectorAll('input[type=radio][name=type]').forEach(function(radio) {
        radio.addEventListener('change', updateResult);
    });

    

        // Event listener for form submission
        document.getElementById('insuranceForm').addEventListener('submit', function(event) {
            event.preventDefault(); // Prevent default form submission

            // Get the selected value
            var selectedValue = document.querySelector('input[name="type"]:checked').value;

            // Redirect to the corresponding template based on the selected value
            if (selectedValue === 'Assurance vie') {
                window.location.href = "{{ path('app_constat_vie') }}"; // Replace 'app_constatvie' with your route name for the Assurance vie template
            } 
            else if (selectedValue === 'Assurance véhicule') {
                window.location.href = "{{ path('app_constat_vehicule') }}"; // Replace 'app_constatvehicule' with your route name for the Assurance véhicule template
            }
         else {
            // Handle the case where no radio button is selected
            alert("Please select an option.");
        }
        });
    

</script> 



